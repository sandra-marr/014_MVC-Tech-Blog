<div class=" text-center display-flex flex-column justify-center">
    <h2>~ Dashboard for {{user_name}} ~</h2>
    <h4>Create, Update, or Delete Posts Here:</h4>
</div>

<div class="row mt-4">
    {{#if posts.length}}
  <div class="col-md-12 post-list border">
    <h3>Current Posts:</h3>
    {{#each posts as |post|}}
    <div class="row mb-2 post-list">
      <div class="col-md-8">
        <h4><a href="/api/edit/{{post.id}}">{{post.post_title}}</a></h4>
        
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <div class="col-md-12 border mt-3">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post_title">Post Title:</label>
        <input class="form-input" type="text" id="post_title" name="post_title" />
      </div>
      <div class="form-group">
        <label for="post_body">Post Body:</label>
        <textarea class="form-input" id="post_body" name="post_body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


</div>
