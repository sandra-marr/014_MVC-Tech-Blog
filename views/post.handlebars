<div class="text-center">
  <div style="border: 2px solid black;">
  <h2>{{posts.post_title}}</h2>
  <p>{{posts.post_body}}</p>
  <p>Created by {{posts.user.user_name}} on {{posts.post_date}}</p>
  <div>
    {{#each posts.comments as |comment| }}
      <div class="comment-list">
    <h3>Comments:</h3>
    <div>
      <h4>{{post.user.user_name}}</h4>
      <p>{{comment.comment_body}}</p>
      <p>{{format_date comment.comment_date}}</p>
    </div>
    </div>
    {{/each}}
  </div>
  </div>
    <form class="form commentForm">
      <div class="form-group">
        <label for="comment_body">Comment:</label>
        <textarea class="form-input" id="comment_body" name="comment_body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>