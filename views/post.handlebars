<div>
  <div class="border">
    <h2 class="post text-center">{{posts.post_title}}</h2>
    <p>{{posts.post_body}}</p>
    <p class="text-right side-note">Created by {{posts.user.user_name}} on {{posts.post_date}}</p>
  </div>
  <div class="comment-list border">
    <h3>Comments:</h3>
     {{#each comments as |comment| }}
    <div class="display-flex justify-space-between">
      <div>
        <p>{{comment.comment_body}}</p>
      </div>
      <div>
        {{comment.user_name}}{{comment.comment_date}}</p>
      </div>
    </div>
    {{#if current_user}}
    <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
    {{/if}}
     {{/each}}  
  </div>
  </div>
    <form class="form commentForm">
      <div class="form-group">
        <label for="comment_body">Comment:</label>
        <textarea class="form-input" id="comment_body" name="comment_body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>